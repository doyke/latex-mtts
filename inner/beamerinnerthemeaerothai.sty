\mode<presentation>

\setbeamertemplate{navigation symbols}[default]
\setbeamertemplate{title page}[default][colsep=-4bp,rounded=true, shadow=true]
\setbeamertemplate{part page}[default][colsep=-4bp,rounded=true]

%\setbeamertemplate{section in toc}[sections numbered]
\setbeamertemplate{section in toc}{
	\inserttocsectionnumber. \inserttocsection
}
\setbeamertemplate{subsection in toc}[ball]
% \setbeamertemplate{subsection in toc}{%
%	\hspace{1.2em}{\color{orange}
%	\rule[0.3ex]{5pt}{5pt}}~\inserttocsubsection\par
%}

% Blocks
\setbeamertemplate{blocks}[shadow=false]

% Items
\setbeamertemplate{itemize item}[ball]
%\setbeamertemplate{itemize item}{\raise0.5pt\hbox{\vrule width 1ex height 1ex}}
\setbeamertemplate{itemize subitem}[triangle]
\setbeamertemplate{itemize subsubitem}[dash]

% Enumerate items

\setbeamertemplate{enumerate item}{\scriptsize\insertenumlabel.}
\setbeamertemplate{enumerate subitem}{\tiny\insertenumlabel.\insertsubenumlabel}
\setbeamertemplate{enumerate subsubitem}{\tiny\insertenumlabel.\insertsubenumlabel.\insertsubsubenumlabel}

\mode<all>
