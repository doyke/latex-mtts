\mode<presentation>

\definecolor{aerodarkblue}{RGB}{0,32,96}
\definecolor{aeromediumblue}{RGB}{143,170,220}
\definecolor{aerolightblue}{RGB}{218,227,243}

\setbeamercolor{normal text}{fg=black,bg=white}
\setbeamercolor{focus text}{fg=aerodarkblue,bg=white}
\setbeamercolor{alerted text}{fg=red!70!black, bg=red!70!black}
\setbeamercolor{example text}{fg=green!50!black, bg=green!50!black}

\setbeamercolor{background canvas}{parent=normal text}
\setbeamercolor{background}{parent=background canvas}

\setbeamercolor{title}{fg=aerolightblue,bg=aerodarkblue}
\setbeamercolor{subtitle}{parent=title}
\setbeamercolor{author}{fg=aerodarkblue}
\setbeamercolor{institute}{fg=aerodarkblue}
\setbeamercolor{date}{fg=aerodarkblue}

\setbeamercolor{section in toc}{parent=normal text}
\setbeamercolor{subsection in toc}{parent=normal text}
\setbeamercolor{subsection number projected}{bg=aerodarkblue}

\setbeamercolor{block title}{use=structure,fg=aerolightblue,bg=aerodarkblue}
\setbeamercolor{block body}{use=structure,fg=aerodarkblue,bg=aerolightblue}

\setbeamercolor{block title alerted}{use=structure,fg=white}
\setbeamercolor{block body alerted}{use=structure,fg=red!70!black,bg=red!10!white}

\setbeamercolor{block title example}{use=structure,fg=white}
\setbeamercolor{block body example}{use=structure,fg=green!50!black,bg=green!10!white}

%\setbeamercolor{frametitle}{fg=aerodarkblue,bg=aerolightblue}
\setbeamercolor{frametitle}{fg=white,bg=aerodarkblue}
\setbeamercolor{itemize item}{fg=aerodarkblue}
\setbeamercolor{itemize subitem}{fg=aerodarkblue}

\setbeamercolor*{palette primary}{use=structure,fg=black,bg=structure.fg!40!white}
\setbeamercolor*{palette secondary}{use=structure,fg=white,bg=structure.fg!60!white}
\setbeamercolor*{palette tertiary}{use=structure,fg=white,bg=structure.fg!90!white}
\setbeamercolor*{palette quaternary}{fg=white,bg=black}

\setbeamercolor*{sidebar}{use=structure,bg=structure.fg}
  
\setbeamercolor*{palette sidebar primary}{use=structure,fg=structure.fg!10}
\setbeamercolor*{palette sidebar secondary}{fg=white}
\setbeamercolor*{palette sidebar tertiary}{use=structure,fg=structure.fg!50}
\setbeamercolor*{palette sidebar quaternary}{fg=white}

\setbeamercolor*{titlelike}{use=structure,fg=structure.fg}

\setbeamercolor*{separation line}{}
\setbeamercolor*{fine separation line}{}

\setbeamercolor{footlineLeft}{fg=aerolightblue,bg=aerodarkblue}
\setbeamercolor{footlineMiddle}{fg=aerodarkblue,bg=aerolightblue}
\setbeamercolor{footlineRight}{fg=aerodarkblue,bg=aeromediumblue}

\mode
<all>
